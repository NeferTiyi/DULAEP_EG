      \subsection*{Vocabulaire}
      % \begin{multicols}{2}
        \begin{itemize}
          \item \begin{hieroglyph}\end{hieroglyph}
                \tl{(i)r(y)-pa.t}, \td{noble}
          \item \begin{hieroglyph}\end{hieroglyph}
                \tl{HAty-a}, \td{prince local}
          \item \begin{hieroglyph}\end{hieroglyph}
                \tl{Hry-tp}, \td{nomarque}
          \item \begin{hieroglyph}\end{hieroglyph}
                \tl{mA-HD}, nome de l'Oryx\\(16\ieme~nome de \HE)
          \item \begin{hieroglyph}\end{hieroglyph}
                \tl{iAm-a}, \td{gracieux de bras}
        \end{itemize}
      % \end{multicols}

      \vfill

      \begin{solution}
        \tl{aHa.n rdi.n=f sw r iry-pa.t hAty-a iAm-a Hry-tp aA n mA-HD}

        \td{Alors il (le roi) l'a fait noble, prince local, gracieux 
            de bras et nomarque du nome de l'Oryx.}

        \tg{Phrase introduite par un auxiliaire de la narration suivie 
            d'un \tlg{sDm.n=f} accompli.}
      \end{solution}
    \end{minipage}

