    \part
    \begin{hieroglyph}
      r:di'-i-n Hm-1-f :n-i-s-A2-t-\!w n:f sw-t:r:x-A1
    \end{hieroglyph}

    \begin{solution}
      \tl{rdi.in Hm=f nis=tw n=f rx-nsw.t}

      \td{Alors, sa Majesté a fait qu'on appelle pour lui le 
          connu-du-roi.}

      \tg{Phrase avec la forme verbale de la narration \tlg{sDm.in=f} 
          suivi d'une proposition complétive au subjonctif.}
    \end{solution}

    \part
    \begin{hieroglyph}
      i-r:r:f m t:r-tr-ra:n m-D38:S-rw-w-ra-!
      p:n-a:P1A-x:r-f ir:t*1-f r r:a-ra-D40-!
      xpr-r-x:r a-aHa-a-w-3 m iz-w:t-D40-3
    \end{hieroglyph}

    \begin{solution}
      \tl{ir rf m tr n(y) mSrw,\\
          pna.xr=f ir.t=f r Ra\\
          xpr.xr aHa.w m is.wt}

      \td{Donc au moment du soir,\\
          Il retournera son \oe{}il contre Rê,\\
          Et un arrêt surviendra dans l'équipage.}

      \tg{Circonstancielle en protase, deux phrases avec la forme 
          \tlg{sDm.xr=f}}
    \end{solution}
  \end{parts}
