\chapter*{Exercice~3}
% =====================================================================

\begin{questions}
  \question\qfmt{Translittérer, analyser les formes verbales et 
  traduire}

  \begin{parts}
    \part
    \begin{hieroglyph}
      ini-n:t:k n-+l$\big($+sA1+l$\big)$+s p-pA:\!a-w-\!t:.-G38:3 
      M42-A2 +l$\big($+s-A1+l$\big)$+s s-n
    \end{hieroglyph}\\
    \infos{Extrait d'une lettre au mort, Bol de Qaou \no2 : demande 
    faite par la mère défunte à son fils vivant}

    \begin{solution}
      \tl{int=k n(=i) pAa.wt, wnm(=i) sn}

      \td{Puisses-tu m'apporter des cailles, que je les mange.}

      \tg{\tlg{int=k} : subjonctif, position initiale
          \tlg{wnm(=i)} : subjonctif, position séquentielle, fonction 
            circonstancielle virtuelle finale-consécutive}
    \end{solution}

    \part
    \begin{hieroglyph}
      S:p-\!D26 k V17-1 p-W
    \end{hieroglyph}\\
    \infos{Extrait d'un recueil de formules de protection : ordre 
    adressé au mal que le magicien cherche à chasser du corps d'un 
    enfant}

    \begin{solution}
      \tl{Sp=k, sA pw}

      \td{Puisses-tu t'écouler, (car) c'est une protection.}

      \tg{\tlg{Sp=k} : subjonctif, position initiale}
    \end{solution}

    \part
    \begin{hieroglyph}
      i-m-n':k ir x:t-Y1:3 r:z
    \end{hieroglyph}

    \begin{solution}
      \tl{im=k ir x.t r=s}

      \td{Puisses-tu ne rien faire contre elle.}

      \tg{\tlg{im=k ir} : négation du subjonctif autonome}
    \end{solution}
  \end{parts}

  \subsection*{Vocabulaire}
  \begin{multicols}{2}
