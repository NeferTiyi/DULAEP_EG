  \question\qfmt{Paroi de la tombe du pharaon Séthy~I\ier (musée du 
  Louvre). Translittérer et traduire les légendes se rapportant aux 
  deux personnages (col.~1 à~5).}

  \begin{minipage}{0.4\linewidth}
    \centering
    \includegraphics[width=\textwidth]{Louvre_B7_1}
  \end{minipage}%
  \begin{minipage}{0.6\linewidth}
    \centering
    \adjustbox{valign=T, minipage=2cm, raise=-2ex}{%
      \begin{hieroglyph}
        +dg-|5-W10:t Aa8:t:xAst imnt
      \end{hieroglyph}%
    }%
    \adjustbox{valign=T, minipage=1.3\Htm}{%
      \EnColonne[1.3\Htm]{%
        \begin{hieroglyph}
          +dg-|4-O10 Hr*tp-t wAs*(t:niwt)
        \end{hieroglyph}%
      }%
    }%
    \qquad%
    \adjustbox{valign=T, minipage=3cm}{%
      \EnColonne[1.3\Htm]{%
        \begin{hieroglyph}
          |1-nb tA'-tA'-idb*idb <-ra-mAat-mn-> !
          |2-nb xa*3 <-(p:t)*H-C12*i*i-N36-n-> !
          |3-di*anx mi*(ra:1) Dt
        \end{hieroglyph}%
      }
    }%
  \end{minipage}

  \bigskip

  \begin{solution}
    \tl{%
      \lgn{1} nb tA.wy Mn-MAa.t-Ra 
      \lgn{2} nb xa.w \%tXy-mr.n-PtH 
      \lgn{3} di anx mi Ra D.t%
    }

    \td{%
      \lgn{1} le seigneur du Double-Pays Menmaâtrê, 
      \lgn{2} seigneur des couronnes Séthy-aimé-de-Ptah, 
      \lgn{3} doué de vie comme Rê éternellement.%
    }

    \tl{%
      \lgn{4} @w.t-@r Hry.t-tp WAs.t
      \lgn{5} Hnw.t smy.t jmnt(y.t)%
    }

    \td{%
      \lgn{4} Hathor, qui préside à Thèbes
      \lgn{5} souveraine de la nécropole occidentale.%
    }
  \end{solution}

