  \begin{parts}
    \part\textbf{\source{La complainte de Khâkheperrêseneb}}

    \begin{hieroglyph}
      +dg-niwt:t*3 Aa8:t*niwt-Z3A m i-a:n-nw-W-A2-Z3A
    \end{hieroglyph}%
    \begin{solution}
      \tl{niw.wt spA.wt m ianw\ex}

      \td{Les villes et les provinces sont dans la détresse !}
    \end{solution}

    \part\textbf{Extrait d'une lettre d'Héqanakht aux membres de sa 
    maisonnée :} après avoir annoncé que les salaires sont revus à la 
    baisse en raison des circonstances économiques, le chef de domaine 
    cherche à rassurer sur sa bienveillance.

    \begin{hieroglyph}
      +dg-m:di' T:n:3 pr-1-rmT r-Dr:r-f m-mi-t:t X:r:d-G37-w-rmT A1
    \end{hieroglyph}%

    {\smaller\SmallerText%
      NB : dans le groupe 
      \begin{hieroglyph}X:r:d-G37-w-rmT\end{hieroglyph} 
      lire le \begin{hieroglyph}w\end{hieroglyph} avant le moineau.%
    }

    \begin{solution}
      \tl{mTn pr r-Dr=f m mit.t Xrd.w=i}

      \td{Voyez, la maisonnée toute entière est pareille à mes 
          enfants.}
    \end{solution}

    \part\textbf{\source{Prophétie de Néferti} :} annonce de l'action 
    du futur roi

    \begin{hieroglyph}
      +dg-i-W T14-m-W-rmT r x:r-A15:n S:a-t:F41-sSm:3 f-!
      +dg-ti-m-H-W-T14-rmT xAst:r x:r-A15:n n:ns:\!\!z\s1-W:t-Q7-3 :f-!
      +dg-i-W a:r-a:t-I12 imi-m-\!\!t:. xnt-n:t-pr :f 
      Hr-1 s-h:r-t:Y1 n:f XA-A-k':Aa2-ib-1-A14
    \end{hieroglyph}%

    \begin{solution}
      \tl{iw aAm.w r xr n Sa.t=f, \&imHy.w r xr n nsw.t=f. 
          iw ara.t im(y).t xnt=f Hr shr.t n=f XAk-ib}

      \td{Les Asiatiques vont tomber à cause de son massacre, 
          les Libyens vont tomber à cause de sa flamme. 
          L'ur{\ae}us qui est à son front apaise pour lui le 
          mécontent.}
    \end{solution}

    \part
    \begin{hieroglyph}nn s-xA-A-A2 f x:r tp*p:tA-A1-Z3\end{hieroglyph}%
    \begin{solution}
      \tl{nn sxA(w)=f xr tp(y).w-tA}

      \td{Son souvenir n'est pas auprès des survivants.}
    \end{solution}
  \end{parts}

