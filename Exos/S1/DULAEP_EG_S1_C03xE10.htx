  \item \begin{hieroglyph}sn:n-A1\end{hieroglyph} 
        \tl{sn}, \td{frère}
  \item \begin{hieroglyph}s-x:r-Y1v\end{hieroglyph} 
        \tl{sxr}, \td{plan}, \td{conseil}
  \item \begin{hieroglyph}t*x:n-txn\end{hieroglyph} 
        \tl{txn}, \td{obélisque}
