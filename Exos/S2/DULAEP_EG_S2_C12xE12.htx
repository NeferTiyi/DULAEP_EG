      \item \tl{in}, \td{par} (préposition)
      \item \tl{wAw}, \td{vague}
      \item \tl{wAD-wr}, \td{la Très-verte}, \td{mer}
      \item \tl{HAty-a}, \td{prince local}
      \item \tl{Da}, \td{tempête}
    \end{itemize}
