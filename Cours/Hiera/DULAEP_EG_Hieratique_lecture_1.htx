\begin{exercice}
  \includegraphics[scale=0.75]{hiera_Djedi_1}

  \reflectbox{%
    \begin{hieroglyph}
      Dd-Dd-i-Y1:A1 r:n-A2 -f
    \end{hieroglyph}%
  }

  \tl{+di rn=f}

  \td{Son nom est Djédi.}
